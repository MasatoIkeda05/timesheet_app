<% provide(:title, "Log in") %>
<h1>Log in</h1>

<%= form_for(:session, url: login_path) do |f| %>

  <% if flash.now[:danger] %>
    <div class="alert alert-danger">
      <%= flash.now[:danger] %>
    </div>
  <% end %>

  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.submit "Log in" %>
<% end %>

<p>if you aer owner? <%= link_to "Sign up now!", signup_path %></p>


